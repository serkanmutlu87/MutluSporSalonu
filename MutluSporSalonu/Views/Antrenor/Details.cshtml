@model MutluSporSalonu.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Detay";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between mb-3">
        <h2>@Model.AntrenorAdSoyad - Detay</h2>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <h4 class="card-title">@Model.AntrenorAdSoyad</h4>

            <p class="card-text">
                <strong>Uzmanlık Alanları:</strong><br />
                @Model.AntrenorUzmanlikAlanlari
            </p>

            <p class="card-text">
                <strong>Spor Salonu:</strong>
                @if (Model.SporSalonu != null)
                {
                    @Model.SporSalonu.SalonAdi
                }
                else
                {
                    <span class="text-muted">Tanımlı spor salonu yok.</span>
                }
            </p>

            <p class="card-text">
                <strong>İletişim:</strong><br />
                Telefon: @(string.IsNullOrWhiteSpace(Model.AntrenorTelefon) ? "-" : Model.AntrenorTelefon) <br />
                E-posta: @(string.IsNullOrWhiteSpace(Model.AntrenorEposta) ? "-" : Model.AntrenorEposta)
            </p>

            <p class="card-text">
                <strong>Müsaitlik Saatleri:</strong><br />
                @Model.AntrenorMusaitlikBaslangic.ToString(@"hh\:mm") -
                @Model.AntrenorMusaitlikBitis.ToString(@"hh\:mm")
            </p>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.AntrenorID" class="btn btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@Model.AntrenorID" class="btn btn-danger">Sil</a>
            </div>

        </div>
    </div>


    @if (Model.Hizmetler != null && Model.Hizmetler.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="m-0">Verebildiği Hizmetler</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var hizmet in Model.Hizmetler)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>@hizmet.HizmetAdi</strong><br />
                                <small class="text-muted">
                                    Süre: @hizmet.HizmetSureDakika dakika | Ücret: @hizmet.HizmetUcret ₺
                                </small>
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">
            Bu antrenöre atanmış hizmet bulunmamaktadır.
        </div>
    }
</div>
