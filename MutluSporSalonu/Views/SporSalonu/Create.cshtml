@*
@file        Create.cshtml
@description Yeni spor salonu kaydı oluşturma ekranıdır.
             Bu sayfaya sadece Admin rolüne sahip kullanıcılar erişebilir.
             Form verileri SporSalonuController içerisindeki Create action'ına gönderilir.
@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.SporSalonu

@{
    ViewData["Title"] = "Yeni Spor Salonu Ekle";
}

<div class="container mt-4">

    @* Admin değilse formu göstermeyip uyarı veriyoruz *@
    @if (!User.IsInRole("Admin"))
    {
        <div class="alert alert-warning">
            Bu işlem için yetkiniz yok. Spor salonu ekleme işlemini sadece <b>Admin</b> yapabilir.
        </div>

        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    }
    else
    {
        <h2 class="mb-4">Yeni Spor Salonu Ekle</h2>

        <form asp-action="Create" method="post" class="row g-3">

            @* Model doğrulamaları için client-side validation scriptleri çalışır *@
            <div class="col-md-6">
                <label asp-for="SalonAdi" class="form-label"></label>
                <input asp-for="SalonAdi" class="form-control" />
                <span asp-validation-for="SalonAdi" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="SalonAdres" class="form-label"></label>
                <input asp-for="SalonAdres" class="form-control" />
                <span asp-validation-for="SalonAdres" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="SalonAcilisSaati" class="form-label"></label>
                <input asp-for="SalonAcilisSaati" class="form-control" type="time" />
                <span asp-validation-for="SalonAcilisSaati" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="SalonKapanisSaati" class="form-label"></label>
                <input asp-for="SalonKapanisSaati" class="form-control" type="time" />
                <span asp-validation-for="SalonKapanisSaati" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="SalonAciklama" class="form-label"></label>
                <textarea asp-for="SalonAciklama" class="form-control" rows="3"></textarea>
                <span asp-validation-for="SalonAciklama" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>

        </form>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    }

</div>
