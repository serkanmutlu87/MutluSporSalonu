@*
@file        Delete.cshtml
@description Spor salonu silme onay ekranıdır.
             Bu sayfaya sadece Admin rolüne sahip kullanıcılar erişebilir.
             Seçilen salon bilgileri gösterilir ve silme işlemi SporSalonuController içindeki
             Delete (POST) action'ına gönderilerek gerçekleştirilir.
@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.SporSalonu

@{
    ViewData["Title"] = "Spor Salonu Sil";
}

<div class="container mt-4">

    @* Admin değilse silme formunu göstermeyip uyarı veriyoruz *@
    @if (!User.IsInRole("Admin"))
    {
        <div class="alert alert-danger">
            Bu işlem için yetkiniz yok. Spor salonu silme işlemini sadece <b>Admin</b> yapabilir.
        </div>

        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    }
    else
    {
        <h2 class="mb-4 text-danger">Spor Salonunu Sil</h2>

        @* Kullanıcıdan silme işlemi için onay alınan uyarı kutusu *@
        <div class="alert alert-warning">
            <strong>Dikkat!</strong> Aşağıdaki spor salonunu silmek üzeresiniz. Bu işlem geri alınamaz.
        </div>

        @* Silinecek salonun özet bilgileri *@
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">@Model.SalonAdi</h4>
                <p class="card-text">
                    <strong>Adres:</strong> @Model.SalonAdres <br />
                    <strong>Çalışma Saatleri:</strong>
                    @Model.SalonAcilisSaati.ToString(@"hh\:mm") -
                    @Model.SalonKapanisSaati.ToString(@"hh\:mm") <br />

                    <strong>Açıklama:</strong>
                    @* Açıklama boşsa kullanıcıya bilgi veriyoruz *@
                    @if (string.IsNullOrWhiteSpace(Model.SalonAciklama))
                    {
                        <span class="text-muted">Açıklama bulunmuyor.</span>
                    }
                    else
                    {
                        @Model.SalonAciklama
                    }
                </p>
            </div>
        </div>

        @* Silme işlemi POST ile yapılır; SalonID hidden field ile gönderilir *@
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SalonID" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                <button type="submit" class="btn btn-danger">Evet, Sil</button>
            </div>
        </form>
    }

</div>
