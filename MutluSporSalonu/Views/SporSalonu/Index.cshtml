@model IEnumerable<MutluSporSalonu.Models.SporSalonu>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Spor Salonları</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Sistemde kayıtlı spor salonu bulunmamaktadır.

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create">İlk salonu eklemek için tıklayın.</a>
            }
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Salon Adı</th>
                    <th>Adres</th>
                    <th>Çalışma Saatleri</th>
                    <th>Açıklama</th>
                    <th style="width: 190px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var salon in Model)
                {
                    <tr>
                        <td>@salon.SalonAdi</td>
                        <td>@salon.SalonAdres</td>
                        <td>
                            @salon.SalonAcilisSaati.ToString(@"hh\:mm")
                            -
                            @salon.SalonKapanisSaati.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(salon.SalonAciklama))
                            {
                                <span class="text-muted">-</span>
                            }
                            else
                            {
                                @salon.SalonAciklama
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@salon.SalonID" class="btn btn-sm btn-info">
                                    Detay
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@salon.SalonID" class="btn btn-sm btn-warning">
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@salon.SalonID" class="btn btn-sm btn-danger">
                                        Sil
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
