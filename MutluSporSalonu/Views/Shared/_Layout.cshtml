@{
    var baslik = ViewData["Title"] as string ?? "Mutlu Spor Salonu";
    bool girisYapmis = User?.Identity?.IsAuthenticated ?? false;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@baslik - Mutlu Spor Salonu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    @* Eğer kullanıcı giriş yapmışsa üst menüyü göster, değilse sadece içerik *@
    @if (girisYapmis)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
                <div class="container">
                    <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                        Mutlu Spor Salonu
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ustMenu"
                            aria-controls="ustMenu" aria-expanded="false" aria-label="Menü">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="ustMenu">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SporSalonları" ? "active" : "")"
                                   asp-controller="SporSalonu" asp-action="Index">Salonlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Antrenor" ? "active" : "")"
                                   asp-controller="Antrenor" asp-action="Index">Antrenörler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hizmet" ? "active" : "")"
                                   asp-controller="Hizmet" asp-action="Index">Hizmetler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Randevu" ? "active" : "")"
                                   asp-controller="Randevu" asp-action="Index">Randevular</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "YapayZeka" ? "active" : "")"
                                   asp-controller="YapayZeka" asp-action="Oneri">
                                    Yapay Zekâ Önerisi
                                </a>
                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item me-3 align-self-center text-light small">
                                @User.Identity?.Name
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Hesap" asp-action="Cikis" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container my-4 flex-fill">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 bg-light mt-auto">
        <div class="container text-muted small d-flex justify-content-between">
            <span>© @DateTime.Now.Year Mutlu Spor Salonu</span>
            <span>Proje - Web Programlama</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
