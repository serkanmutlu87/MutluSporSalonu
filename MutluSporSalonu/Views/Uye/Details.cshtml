@*
@file        Details.cshtml
@description Üye detay ekranıdır. Admin kullanıcılar tüm üyeleri görüntüleyebilir;
             normal üyeler sadece kendi hesap bilgilerini ve kendilerine ait
             randevuları görüntüleyebilir. Rol bazlı erişim Razor tarafında
             ek güvenlik kontrolü ile sağlanır.
@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.Uye
@using System.Security.Claims

@{
    ViewData["Title"] = "Üye Detay";

    var isAdmin = User.IsInRole("Admin");
    int currentUserId = 0;

    if (!isAdmin && User.Identity != null && User.Identity.IsAuthenticated)
    {
        int.TryParse(User.FindFirstValue(ClaimTypes.NameIdentifier), out currentUserId);
    }

    var isOwnAccount = isAdmin || (currentUserId != 0 && currentUserId == Model.UyeID);
}

<div class="container mt-4">

    @if (!isOwnAccount)
    {
        <div class="alert alert-danger">
            Bu sayfayı görüntüleme yetkiniz yok. Sadece kendi hesabınızı görüntüleyebilirsiniz.
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
    }
    else
    {
        <div class="d-flex justify-content-between mb-3">
            <h2>@Model.UyeAdSoyad - Üye Detay</h2>

            @if (isAdmin)
            {
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            }
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">

                <h4 class="card-title">@Model.UyeAdSoyad</h4>

                <p class="card-text">
                    <strong>E-posta:</strong> @Model.UyeEposta <br />
                    <strong>Telefon:</strong> @(string.IsNullOrWhiteSpace(Model.UyeTelefon) ? "-" : Model.UyeTelefon) <br />

                    @* Rol bilgisini sadece Admin görsün *@
                    @if (isAdmin)
                    {
                        <strong>Rol:</strong> @Model.Rol <br />
                    }

                    <strong>Kayıt Tarihi:</strong> @Model.KayitTarihi.ToString("dd.MM.yyyy") <br />
                </p>

                @* Admin her üyede, Üye sadece kendi hesabında düzenle/sil görsün *@
                @if (isAdmin || (currentUserId != 0 && currentUserId == Model.UyeID))
                {
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.UyeID" class="btn btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@Model.UyeID" class="btn btn-danger">Sil</a>
                    </div>
                }

            </div>
        </div>

        <h4 class="mt-4">Randevular</h4>

        @if (Model.Randevular == null || !Model.Randevular.Any())
        {
            <div class="alert alert-info">
                Bu üyeye ait randevu bulunmuyor.
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Ücret</th>
                        <th>Onay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Randevular)
                    {
                        <tr>
                            <td>@r.Hizmet?.HizmetAdi</td>
                            <td>@r.Antrenor?.AntrenorAdSoyad</td>
                            <td>@r.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                            <td>
                                @r.RandevuBaslangicSaati.ToString(@"hh\:mm") -
                                @r.RandevuBitisSaati.ToString(@"hh\:mm")
                            </td>
                            <td>@r.RandevuUcret ₺</td>
                            <td>
                                @if (r.RandevuOnaylandiMi)
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }

</div>
