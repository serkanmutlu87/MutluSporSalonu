@*
@file        Index.cshtml
@description Üyeler listeleme ekranıdır. Sadece Admin rolündeki kullanıcılar görüntüleyebilir.
             Yetkisiz erişimde uyarı mesajı gösterilir. Admin; üyeleri görüntüleyebilir,
             düzenleyebilir ve silebilir.
@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model IEnumerable<MutluSporSalonu.Models.Uye>

@{
    ViewData["Title"] = "Üyeler";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <h2 class="mb-4">Üyeler</h2>

    @if (!isAdmin)
    {
        <div class="alert alert-danger">
            Bu sayfayı görüntüleme yetkiniz yok. Üyeler listesini sadece <b>Admin</b> görebilir.
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
    }
    else
    {
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                Sistemde kayıtlı üye bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Telefon</th>
                        <th>Rol</th>
                        <th>Kayıt Tarihi</th>
                        <th style="width: 180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var uye in Model)
                    {
                        <tr>
                            <td>@uye.UyeAdSoyad</td>
                            <td>@uye.UyeEposta</td>
                            <td>@(string.IsNullOrWhiteSpace(uye.UyeTelefon) ? "-" : uye.UyeTelefon)</td>
                            <td>@uye.Rol</td>
                            <td>@uye.KayitTarihi.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@uye.UyeID" class="btn btn-sm btn-info">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@uye.UyeID" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@uye.UyeID" class="btn btn-sm btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
