@model MutluSporSalonu.Models.Randevu

@{
    ViewData["Title"] = "Randevuyu Sil";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Randevuyu Sil</h2>

    <div class="alert alert-warning">
        <strong>Dikkat!</strong> Aşağıdaki randevuyu silmek üzeresiniz. Bu işlem geri alınamaz!
    </div>

    <div class="card mb-3 shadow-sm">
        <div class="card-body">

            <h4 class="card-title">
                @Model.Uye?.UyeAdSoyad - @Model.Hizmet?.HizmetAdi
            </h4>

            <p class="card-text">
                <strong>Üye:</strong> @Model.Uye?.UyeAdSoyad <br />
                <strong>Antrenör:</strong> @Model.Antrenor?.AntrenorAdSoyad <br />
                <strong>Hizmet:</strong> @Model.Hizmet?.HizmetAdi <br />
                <strong>Salon:</strong> @Model.SporSalonu?.SalonAdi
            </p>

            <p class="card-text">
                <strong>Tarih:</strong> @Model.RandevuTarihi.ToString("dd.MM.yyyy") <br />
                <strong>Saat:</strong>
                @Model.RandevuBaslangicSaati.ToString(@"hh\:mm")
                -
                @Model.RandevuBitisSaati.ToString(@"hh\:mm") <br />
                <strong>Ücret:</strong> @Model.RandevuUcret ₺
            </p>

            <p class="card-text">
                <strong>Durum:</strong>
                @if (Model.RandevuOnaylandiMi)
                {
                    <span class="badge bg-success">Onaylandı</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Beklemede</span>
                }
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RandevuID" />

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
            <button type="submit" class="btn btn-danger">
                Evet, Sil
            </button>
        </div>
    </form>
</div>
