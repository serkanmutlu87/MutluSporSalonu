@model IEnumerable<MutluSporSalonu.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Randevular</h2>
        <a asp-action="Ekle" class="btn btn-primary">
            Yeni Randevu Oluştur
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Sistemde kayıtlı randevu bulunmamaktadır.
            <a asp-action="Ekle">İlk randevuyu oluşturmak için tıklayın.</a>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Üye</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Salon</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Ücret (₺)</th>
                    <th>Onay Durumu</th>
                    <th style="width: 220px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Uye?.UyeAdSoyad</td>
                        <td>@r.Antrenor?.AntrenorAdSoyad</td>
                        <td>@r.Hizmet?.HizmetAdi</td>
                        <td>@r.SporSalonu?.SalonAdi</td>
                        <td>@r.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                        <td>
                            @r.RandevuBaslangicSaati.ToString(@"hh\:mm")
                            -
                            @r.RandevuBitisSaati.ToString(@"hh\:mm")
                        </td>
                        <td>@r.RandevuUcret</td>
                        <td>
                            @if (r.RandevuOnaylandiMi)
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@r.RandevuID" class="btn btn-sm btn-info">
                                    Detay
                                </a>
                                <a asp-action="Edit" asp-route-id="@r.RandevuID" class="btn btn-sm btn-warning">
                                    Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@r.RandevuID" class="btn btn-sm btn-danger">
                                    Sil
                                </a>

                                @if (!r.RandevuOnaylandiMi)
                                {
                                    <form asp-action="Onayla" asp-route-id="@r.RandevuID" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            Onayla
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
