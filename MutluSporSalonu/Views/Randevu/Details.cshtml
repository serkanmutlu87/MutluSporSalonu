@*
@file        Details.cshtml
@description Randevu detay görüntüleme ekranıdır.
             Seçilen randevuya ait üye, antrenör, hizmet, salon, tarih-saat,
             ücret ve onay bilgileri sadece okunur şekilde gösterilir.
             Admin kullanıcılar buradan randevuyu onaylayabilir.
@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detay";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between mb-3">
        <h2>Randevu Detayı</h2>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <h4 class="card-title">
                @Model.Uye?.UyeAdSoyad
                -
                @Model.Hizmet?.HizmetAdi
            </h4>

            <p class="card-text">
                <strong>Üye:</strong> @Model.Uye?.UyeAdSoyad <br />
                <strong>Antrenör:</strong> @Model.Antrenor?.AntrenorAdSoyad <br />
                <strong>Hizmet:</strong> @Model.Hizmet?.HizmetAdi <br />
                <strong>Salon:</strong> @Model.SporSalonu?.SalonAdi
            </p>

            <p class="card-text">
                <strong>Tarih:</strong> @Model.RandevuTarihi.ToString("dd.MM.yyyy") <br />
                <strong>Saat:</strong>
                @Model.RandevuBaslangicSaati.ToString(@"hh\:mm")
                -
                @Model.RandevuBitisSaati.ToString(@"hh\:mm") <br />
                <strong>Ücret:</strong> @Model.RandevuUcret ₺
            </p>

            <p class="card-text">
                <strong>Onay Durumu:</strong>
                @if (Model.RandevuOnaylandiMi)
                {
                    <span class="badge bg-success">Onaylandı</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Beklemede</span>
                }
            </p>

            <p class="card-text">
                <strong>Oluşturulma Tarihi:</strong>
                @Model.RandevuOlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")
            </p>

            <p class="card-text">
                <strong>Açıklama / Not:</strong><br />
                @if (string.IsNullOrWhiteSpace(Model.RandevuAciklama))
                {
                    <span class="text-muted">Açıklama girilmemiş.</span>
                }
                else
                {
                    @Model.RandevuAciklama
                }
            </p>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.RandevuID" class="btn btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@Model.RandevuID" class="btn btn-danger">Sil</a>

                @* Sadece Admin ve henüz onaylanmamış randevular *@
                @if (User.IsInRole("Admin") && !Model.RandevuOnaylandiMi)
                {
                    <form asp-action="Onayla" asp-route-id="@Model.RandevuID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success">
                            Randevuyu Onayla
                        </button>
                    </form>
                }
            </div>

        </div>
    </div>

</div>
