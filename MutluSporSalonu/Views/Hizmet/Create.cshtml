@model MutluSporSalonu.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-4">
    <h2 class="mb-4">Yeni Hizmet Ekle</h2>

    <form asp-action="Create" method="post" class="row g-3">

        <div class="col-md-6">
            <label asp-for="HizmetAdi" class="form-label"></label>
            <input asp-for="HizmetAdi" class="form-control" />
            <span asp-validation-for="HizmetAdi" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="HizmetSureDakika" class="form-label"></label>
            <input asp-for="HizmetSureDakika" class="form-control" type="number" min="1" />
            <span asp-validation-for="HizmetSureDakika" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="HizmetUcret" class="form-label"></label>
            <input asp-for="HizmetUcret" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="HizmetUcret" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SalonID" class="form-label">Spor Salonu</label>
            <select asp-for="SalonID" asp-items="ViewBag.SalonID" class="form-select">
                <option value="">-- Seçiniz --</option>
            </select>
            <span asp-validation-for="SalonID" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="HizmetAciklama" class="form-label"></label>
            <textarea asp-for="HizmetAciklama" class="form-control" rows="3"></textarea>
            <span asp-validation-for="HizmetAciklama" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
