@model IEnumerable<MutluSporSalonu.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
    bool adminMi = User.IsInRole("Admin");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetler</h2>

        @if (adminMi)
        {
            <a asp-action="Create" class="btn btn-primary">
                Hizmet Ekle
            </a>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Sistemde tanımlı hizmet bulunmamaktadır.
            @if (adminMi)
            {
                <a asp-action="Create">Yeni hizmet eklemek için tıklayın.</a>
            }
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Süre (dk)</th>
                    <th>Ücret (₺)</th>
                    <th>Salon</th>
                    <th style="width:@(adminMi ? "190px" : "90px");">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hizmet in Model)
                {
                    <tr>
                        <td>@hizmet.HizmetAdi</td>
                        <td>@hizmet.HizmetSureDakika</td>
                        <td>@hizmet.HizmetUcret</td>
                        <td>@hizmet.SporSalonu?.SalonAdi</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@hizmet.HizmetID" class="btn btn-sm btn-info">
                                    Detay
                                </a>

                                @if (adminMi)
                                {
                                    <a asp-action="Edit" asp-route-id="@hizmet.HizmetID" class="btn btn-sm btn-warning">
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@hizmet.HizmetID" class="btn btn-sm btn-danger">
                                        Sil
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
