@*
@file        Edit.cshtml
@description Sistemde tanımlı bir hizmet kaydının güncellenmesi için kullanılan ekrandır.
             Bu sayfaya sadece Admin rolüne sahip kullanıcılar erişebilir.
             Form verileri HizmetController içerisindeki Edit action'ına gönderilir.

@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.Hizmet

@{
    // Kullanıcının Admin rolünde olup olmadığı kontrol edilir
    bool adminMi = User.IsInRole("Admin");
}

@if (!adminMi)
{
    <!-- Admin olmayan kullanıcılar için erişim engeli -->
    <div class="container mt-4">
        <div class="alert alert-danger">
            Bu sayfaya erişim yetkiniz yok.
        </div>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
    return;
}

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container mt-4">
    <h2 class="mb-4">Hizmet Düzenle</h2>

    <!-- Hizmet güncelleme formu -->
    <form asp-action="Edit" method="post" class="row g-3">

        <!-- Güncellenecek hizmetin ID bilgisi -->
        <input type="hidden" asp-for="HizmetID" />

        <div class="col-md-6">
            <label asp-for="HizmetAdi" class="form-label"></label>
            <input asp-for="HizmetAdi" class="form-control" />
            <span asp-validation-for="HizmetAdi" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="HizmetSureDakika" class="form-label"></label>
            <input asp-for="HizmetSureDakika" class="form-control" type="number" min="1" />
            <span asp-validation-for="HizmetSureDakika" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="HizmetUcret" class="form-label"></label>
            <input asp-for="HizmetUcret" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="HizmetUcret" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SalonID" class="form-label">Spor Salonu</label>
            <select asp-for="SalonID" asp-items="ViewBag.SalonID" class="form-select">
                <option value="">-- Seçiniz --</option>
            </select>
            <span asp-validation-for="SalonID" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="HizmetAciklama" class="form-label"></label>
            <textarea asp-for="HizmetAciklama" class="form-control" rows="3"></textarea>
            <span asp-validation-for="HizmetAciklama" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            <button type="submit" class="btn btn-warning">Güncelle</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        // Client-side validation scriptleri
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
