@*
@file        Giris.cshtml
@description Üyelerin e-posta ve şifre bilgileri ile sisteme giriş yaptığı
             kullanıcı giriş ekranıdır. Giriş işlemi HesapController
             içerisindeki Giris action’ı üzerinden gerçekleştirilir.

@course      BSM 311 Web Programlama
@assignment  Dönem Projesi – MutluSporSalonu
@date        20.12.2025
@author      D255012008 - Serkan Mutlu
*@

@model MutluSporSalonu.Models.Uye

@{
    ViewData["Title"] = "Giriş Yap"; // Sayfa başlığı
}

<div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 80px);">
    <div class="col-11 col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-dark text-white text-center">
                <h4 class="mb-0">Mutlu Spor Salonu - Üye Girişi</h4>
            </div>

            <div class="card-body">
                <div class="row g-4">
                    <!-- Giriş Formu -->
                    <div class="col-md-7 border-end">
                        <h5 class="mb-3">Hesabınıza Giriş Yapın</h5>

                        <!-- Form verileri HesapController/Giris action'ına gönderilir -->
                        <form asp-action="Giris" method="post">
                            @Html.AntiForgeryToken() <!-- CSRF güvenliği -->

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                            <div class="mb-3">
                                <label asp-for="UyeEposta" class="form-label"></label>
                                <input asp-for="UyeEposta" class="form-control" placeholder="ornek@sakarya.edu.tr" />
                                <span asp-validation-for="UyeEposta" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UyeSifre" class="form-label"></label>
                                <input asp-for="UyeSifre" class="form-control" type="password" placeholder="Şifreniz" />
                                <span asp-validation-for="UyeSifre" class="text-danger"></span>
                            </div>

                            @* Giriş sonrası geri yönlendirme gerekiyorsa returnUrl saklanır *@
                            @if (ViewData["ReturnUrl"] != null)
                            {
                                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            }

                            <button type="submit" class="btn btn-dark w-100 mt-2">
                                Giriş Yap
                            </button>

                            <!-- Proje kapsamında tanımlı örnek admin hesabı -->
                            <div class="mt-3 small text-muted">
                                <p class="mb-1">
                                    <strong>Not:</strong> Proje gereği örnek admin hesabı:
                                </p>
                                <p class="mb-0">
                                    E-posta: <code>D255012008@sakarya.edu.tr</code><br />
                                    Şifre: <code>sau</code>
                                </p>
                            </div>
                        </form>
                    </div>

                    <!-- Kayıt Ol Bölümü -->
                    <div class="col-md-5 d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="mb-3">Yeni Üyelik Oluştur</h5>
                            <p class="text-muted small">
                                Mutlu Spor Salonu sistemine ilk kez giriş yapacaksanız,
                                önce üye kaydı oluşturmanız gerekmektedir.
                            </p>
                        </div>

                        <div class="mt-3">
                            <!-- Üye kayıt ekranına yönlendirme -->
                            <a asp-controller="Uye" asp-action="Create" class="btn btn-outline-dark w-100 mb-2">
                                Kayıt Ol
                            </a>
                            <p class="text-muted small mb-0">
                                Kayıt sırasında ad soyad, e-posta, şifre ve isteğe bağlı olarak
                                boy / kilo / vücut tipi bilgileriniz istenecektir. Bu bilgiler,
                                randevu ve yapay zekâ öneri modülünde kullanılabilir.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-center small text-muted">
                MutluSporSalonu - Web Programlama Dersi Proje Ödevi
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Client-side doğrulamalar -->
}
